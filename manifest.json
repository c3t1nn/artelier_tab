{
  "manifest_version": 2,
  "name": "artelier:tab",
  "version": "1.0.0",
  "description": "Transform your new tab into an art gallery featuring works from the Art Institute of Chicago",
  
  "permissions": [
    "storage",
    "clipboardWrite",
    "https://api.artic.edu/*"
  ],

  "chrome_url_overrides": {
    "newtab": "src/html/newtab.html"
  },

  "icons": {
    "16": "src/assets/icons/icon-16.png",
    "48": "src/assets/icons/icon-48.png",
    "128": "src/assets/icons/icon-128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "artelier-tab@example.com",
      "strict_min_version": "57.0"
    }
  },

  "background_color": "#FAFCFF",
  "theme_color": "#006495",
  
  "author": "Your Name",
  "homepage_url": "https://github.com/c3t1nn/artelier_tab",

  "content_security_policy": "script-src 'self'; object-src 'none'"
}